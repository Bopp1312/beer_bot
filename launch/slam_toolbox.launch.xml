<launch>
  <node
    pkg="slam_toolbox"
    exec="sync_slam_toolbox_node"
    name="slam_toolbox"
    output="screen">
    <param name="use_sim_time" value="false"/>
    <param name="slam_mode" value="true"/>
    <param name="resolution" value="0.05"/>
    <param name="max_laser_range" value="10.0"/>
    <param name="minimum_time_interval" value="1.0"/>
  </node>
</launch>

